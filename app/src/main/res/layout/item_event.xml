<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userPicId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/pic"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"/>

        <TextView
            android:text="Monique Cruz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userPicId"
            android:layout_toEndOf="@+id/userPicId"
            android:id="@+id/userNameId"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="2 hours ago | Mandaluyong City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userNameId"
            android:layout_toRightOf="@+id/userPicId"
            android:layout_toEndOf="@+id/userPicId"
            android:id="@+id/timestampAndLocationId"
            android:textSize="8sp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:orientation="horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/sample">

    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/likeBtnId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:drawableLeft="@drawable/like_icon"
            android:gravity="center_horizontal|center_vertical"
            android:text="Like"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/commentBtnId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@+id/likeBtnId"
            android:drawableLeft="@drawable/comment_icon"
            android:gravity="center_horizontal|center_vertical"
            android:text="Comment"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/sendBtnId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@+id/commentBtnId"
            android:drawableLeft="@drawable/send_icon"
            android:gravity="center_horizontal|center_vertical"
            android:text="Send"
            android:textSize="10sp" />


        <ImageView
            android:id="@+id/mapBtnId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/see_map_icon" />
    </RelativeLayout>
</LinearLayout>